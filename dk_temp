
create  index   FD_IX_TrialBalance_PeriodStartDate_PeriodEndDate
        on      FundAccounting.TrialBalance
                (
                PeriodStartDate,
                PeriodEndDate
                )
        include (
                [ClosingBalance],
                PositionID
                )
        where   Sect IN ('Assets','Liabilities')  
                AND Cat IN ('Investments Long','Investments Short')
                and [Description] != 'Accrued Interest'
        with    (
                data_compression = page
                )



create  index   FD_IX_PositionClosedPeriod_PeriodEndDate
        on      FundAccounting.PositionClosedPeriod
                (
                PeriodEndDate,
                AltID2
                )
        include (
                TotalQuantity
                )
        with    (
                data_compression = page
                )
