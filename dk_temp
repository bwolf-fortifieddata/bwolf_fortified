use     <database name>
go

declare @initialsize    int = <initialsize>             ,
        @shrinksize     int                             ,
        @shrinkinc      int = 1024                      ,
        @floorsize      int = <floorsize>               ,
        @logicalName    varchar(256) = <logicalName>


set     @shrinksize     = @initialsize - @shrinkinc

while   @shrinksize >= @floorsize
        BEGIN
                dbcc    shrinkfile(@logicalName, @shrinksize)

                set     @shrinksize = @shrinksize - @shrinkinc
        END

dbcc    shrinkfile(@logicalName, @floorsize)
